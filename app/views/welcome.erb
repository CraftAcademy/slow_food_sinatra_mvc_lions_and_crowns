Welcome to my site!
<% @categories.each do |category| %>
  <section id="<%= category.titleize.gsub(' ', '').underscore %>">
    <% @products.each do |product| %>
      <% if product.category == category %>
      <%= "#{category}" %>
        <h1>
          <%= "#{product.name} - #{product.price} kr" %>
        </h1>
        <p>
          <%= product.description %>
        </p>
      <% end %>
    <% end %>
  </section>
<% end %>
