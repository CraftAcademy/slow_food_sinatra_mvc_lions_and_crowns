<form action="/signup" method="post">
  <label for="username">User name</label> <input type="text" name="user[username]" id="username" />
  <label for="password">Password</label> <input type="password" name="user[password]" id="password" />
  <label for="confirm_password">Password confirmation</label> <input type="password" name="user[passwordconfirmation]" id="confirm_password" />
  <input type="submit" value="Sign up">
</form>
<p>
  <%= @message %>
</p>
